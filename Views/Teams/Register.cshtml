@model TeamNaGuara.Models.Team
@{
    ViewData["Title"] = "Registrar Equipo";
}
<h2>Registrar Equipo - Team Na' Guara</h2>
<form asp-action="Register" method="post" enctype="multipart/form-data">
    <div class="mb-2">
        <label>Nombre del equipo</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label>Representante</label>
        <input class="form-control" asp-for="Representative" />
    </div>
    <div class="mb-2">
        <label>Teléfono</label>
        <input class="form-control" asp-for="Phone" />
    </div>
    <div class="mb-2">
        <label>Email</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="mb-2">
        <label>Categoría</label>
        <input class="form-control" asp-for="Category" />
    </div>
    <div class="mb-2">
        <label>Logo del equipo (JPG/PNG, max 4MB)</label>
        <input type="file" name="logo" class="form-control" />
        <span class="text-danger">@ViewData.ModelState["logo"]?.Errors.FirstOrDefault()?.ErrorMessage</span>
    </div>
    <button class="btn btn-primary" type="submit">Registrar Equipo</button>
</form>
